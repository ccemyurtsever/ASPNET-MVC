@model IEnumerable<WebApplication.Models.Tbl_Araclar>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Css/stilim.css" rel="stylesheet" />
</head>
<body>
    <h1>Sakaraya BİP Otomativ</h1>
    <h3>Araç Listesi</h3>
    <table class="table" border="1" cellpadding="6" cellspacing="0">
        <tr>
            <th>

            </th>
            <th>
                Araç Görseli      
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelYili)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yakit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vites)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fiyat)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td colspan="2">
                @{
                    var dir = "~/VehicleImages/" + item.AracId + ".jpg";
                    string FolderPath = Path.Combine(Server.MapPath(dir));
                    if (System.IO.File.Exists(FolderPath))
                    {
                        <img src="@Url.Content(dir)" width="100" />
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelYili)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yakit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vites)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fiyat)
            </td>
            <td>
                @Html.ActionLink("Detay", "Details", new { id = item.AracId }) |
                @Html.ActionLink("Rezervasyon", "Rezervation", new { id = item.AracId })
            </td>
        </tr>
    }
    </table>
    <p>
        @Html.ActionLink("Ana Sayfa", "Index", "Home") |
        @Html.ActionLink("Hakkımızda", "About", "Home") |
        @Html.ActionLink("Araçlar", "Index", "Vehicle") |
        @Html.ActionLink("Rezervasyonlarım", "Index", "Rezervation") |
    </p>
</body>
</html>
